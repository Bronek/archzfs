{
    "variables": {
        "iso_url": "https://mirrors.kernel.org/archlinux/iso/2015.04.01/archlinux-2015.04.01-dual.iso",
        "iso_checksum": "95122cbbde7252959bcea1c49fd797eb0eb25a4b",
        "iso_checksum_type": "sha1"
    },
    "builders": [
        {
            "type": "qemu",
            "iso_url": "{{user `iso_url`}}",
            "iso_checksum": "{{user `iso_checksum`}}",
            "iso_checksum_type": "{{user `iso_checksum_type`}}",
            "http_directory": ".",
            "boot_wait": "5s",
            "headless": false,
            "boot_command": [
                "<enter><wait10><wait10>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/poweroff.timer<enter><wait>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/mirrorlist<enter><wait>",
                "/usr/bin/curl -O http://{{.HTTPIP}}:{{.HTTPPort}}/setup-test-image.sh<enter><wait>",
                "/usr/bin/bash ./setup-test-image.sh<enter>"
            ],
            "disk_size": 122880,
            "ssh_username": "root",
            "ssh_password": "vagrant",
            "shutdown_command": "systemctl start poweroff.timer"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "packer_arch_{{.Provider}}_{{isotime '2006-01-02-1504'}}.box"
        }
    ]
}
